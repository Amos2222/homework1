def pig_latin_translator(sentence):
    # Split the sentence into individual words
    words = sentence.split()

    # Define a list to store the Pig Latin words
    pig_latin_words = []

    # Loop through each word in the sentence
    for word in words:
        if len(word) == 1:
            # For one-letter words, just add 'ay' to the end
            pig_latin_word = word + 'ay'
        else:
            # For words with more than one letter, move the first letter to the$
            pig_latin_word = word[1:] + word[0] + 'ay'

        # Add the Pig Latin word to the list
        pig_latin_words.append(pig_latin_word)

